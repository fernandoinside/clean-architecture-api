    "event": [
      {
        "listen": "prerequest",
        "script": {
          "type": "text/javascript",
          "exec": [
            "// Set environment variables if needed",
            "if (!pm.environment.get('base_url')) {",
            "    pm.environment.set('base_url', 'http://localhost:3000/api');",
            "}"
          ]
        }
      },
      {
        "listen": "test",
        "script": {
          "type": "text/javascript",
          "exec": [
            "// Save auth token from login response",
            "if (pm.response.code === 200) {",
            "    try {",
            "        const jsonData = pm.response.json();",
            "        if (jsonData && jsonData.token) {",
            "            pm.collectionVariables.set('auth_token', jsonData.token);",
            "            if (jsonData.refreshToken) {",
            "                pm.collectionVariables.set('refresh_token', jsonData.refreshToken);",
            "            }",
            "        }",
            "    } catch (e) {",
            "        console.log('No JSON response or token not found');",
            "    }",
            "}",
            "",
            "// Log response for debugging",
            "console.log(pm.response.code, pm.response.status);",
            "console.log(pm.response.headers);"
          ]
        }
      }
    ],
