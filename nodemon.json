{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/tests/**/*",
    "dist/**/*",
    "node_modules/**/*"
  ],
  "exec": "ts-node-dev --respawn --transpile-only src/index.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "1000"
}
