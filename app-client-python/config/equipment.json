    "supported_brands": {
      "toledo": {
        "protocol": "toledo_protocol",
        "weight_format": "decimal",
        "commands": {
          "read_weight": "05",
          "tare": "T"
        }
      },
      "filizola": {
        "protocol": "filizola_protocol",
        "weight_format": "decimal",
        "commands": {
          "read_weight": "W",
          "tare": "T"
